apiVersion: v1
kind: Service
metadata:
  name: mcp-server-service
  namespace: {{ namespace }}
  labels:
    app: mcp-server
    client: {{ client_name }}
    environment: {{ environment }}
spec:
  selector:
    app: mcp-server
    client: {{ client_name }}
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8000
  type: ClusterIP